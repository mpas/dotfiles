# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space

[justfile]
indent_size = 2

# Matches multiple files with brace expansion notation
[*.{go,sh,lua,bats}]
indent_size = 2

# 4 space indentation
[*.{py,md}]
indent_size = 4

[*.html]
indent_size = 4
max_line_length = 120
